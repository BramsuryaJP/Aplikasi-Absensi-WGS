<h1 class="h3 mb-4 text-gray-800">Dashboard</h1>

<!-- Content Row -->
<div class="row">
  <!-- Card Role User -->
  <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
          <div class="card-body">
              <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-info text-uppercase mb-1">User
                      </div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800"><%= countUser.count %></div>
                  </div>
                  <div class="col-auto">
                      <i class="fas fa-user fa-2x text-gray-300"></i>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <!-- Card Role User -->
  <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
          <div class="card-body">
              <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Attendance Time In Today
                      </div>
                      <a class="h5 mb-0 font-weight-bold text-gray-800" style="cursor: pointer; text-decoration: none;" href="/admin/check-attendance-in"><%= countIn.count %></a>
                  </div>
                  <div class="col-auto">
                      <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <!-- Card Role User -->
  <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
          <div class="card-body">
              <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Uncompleted Attendance Today
                      </div>
                      <a class="h5 mb-0 font-weight-bold text-gray-800" style="cursor: pointer; text-decoration: none;" href="/admin/check-attendance-uncompleted"><%= countUncompleted.count %></a>
                  </div>
                  <div class="col-auto">
                      <i class="fas fa-calendar-times fa-2x text-gray-300"></i>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <!-- Card Role User -->
  <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
          <div class="card-body">
              <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Attendance Completed Today
                      </div>
                      <a class="h5 mb-0 font-weight-bold text-gray-800" style="cursor: pointer; text-decoration: none;" href="/admin/check-attendance-completed"><%= countCompleted.count %></a>
                  </div>
                  <div class="col-auto">
                      <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>

<a href="/admin/add-employee" class="btn btn-success btn-icon-split">
  <span class="icon text-white-50">
    <i class="fas fa-plus"></i>
  </span>
  <span class="text">Add Employee</span>
</a>

<div class="my-3"></div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Data User</h6>
  </div>
  <% if (msg.length > 0) { %>
    <div class="row justify-content-center">
      <div class="alert alert-info alert-dismissible fade show mt-3" role="alert" style="width: 95%;">
        <h6 class="capitalize"><%= msg %> </h6> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  <% } %>
  <% if (msg2.length > 0) { %>
    <div class="row justify-content-center">
      <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert" style="width: 95%;">
        <h6 class="capitalize"><%= msg2  %> </h6> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  <% } %>
  <% function capitalize(words) {
    var separateWord = words.toLowerCase().split(' ');
    for (var i = 0; i < separateWord.length; i++) {
       separateWord[i] = separateWord[i].charAt(0).toUpperCase() +
       separateWord[i].substring(1);
    }
    return separateWord.join(' ');
 } %> 
  <div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No.</th>
              <th>Name</th>
              <th>User's Role</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (model.length > 0) { %>
              <% let i = 1 %> 
              <% model.forEach((data) => { %>
                <tr>
                  <th class="align-middle" style="width: 8%;"><%= i++  %>. </th>
                  <td class="align-middle" style="width: 25%;"><%= capitalize(data.username) %> </td>
                  <td class="align-middle" style="width: 42%;"><%= data.role  %> </td>
                  <td>
                    <a href="/admin/edit-employee/<%= data.username %>" type="button" class="btn btn-warning me-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit"><i class="fa fa-pencil-alt"></i></a>
                    <a href="/admin/delete-employee/<%= data.username %>" type="button" class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete" onclick="return confirm('Yakin Ingin Menghapus Kontak Ini?')"><i class="fa fa-trash"></i></a>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
    </div>
  </div>
</div>

<style scoped>
  .capitalize {
    text-transform: capitalize;
  }
</style>
    