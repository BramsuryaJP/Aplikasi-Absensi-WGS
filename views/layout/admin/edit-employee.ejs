

<form method="POST" action="/employee/update-profile" style="width: 50%;">
  <h1 class="mt-3 mb-2 text-grey-800">Edit Employee Form</h1>
  <div class="my-3"></div>

  <% if (!model) { %>
    <div class="alert alert-danger alert-dismissible fade show mt-2">
      Employee's Not Found
    </div>
  <% } else { %> 
    <img class="img-profile rounded-circle" style="width: 260px; height: 260px;" src="../../../uploads/<%= model.photo %> ">
    <div class="my-3"></div>

    <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <ul>
          <% errors.forEach(error => { %>
           <li><%= error.msg %> </li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <% function capitalize(words) {
      var separateWord = words.toLowerCase().split(' ');
      for (var i = 0; i < separateWord.length; i++) {
         separateWord[i] = separateWord[i].charAt(0).toUpperCase() +
         separateWord[i].substring(1);
      }
      return separateWord.join(' ');
   } %> 

    <input type="hidden" name="oldName" value="<%= model.oldName || model.username %>">
    <div class="mb-3">
      <label for="inputName" class="form-label">Name</label>
      <input name="name" type="text" class="form-control" id="inputName" value ="<%= capitalize(model.username) %>" >
    </div>
    <div class="mb-4">
      <label for="inputName" class="form-label">Role</label>
      <input disabled name="name" type="text" class="form-control" id="inputName" value ="<%= capitalize(model.role) %>" >
    </div>
    <a href="/admin/dashboard" class="btn btn-dark">
      <span class="text">Back</span>
    </a>
    <button type="submit" class="btn btn-success">
      <span class="text">Edit Employee</span>
    </button>
    <% } %>
</form>
